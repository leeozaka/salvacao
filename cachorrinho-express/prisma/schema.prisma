generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin", "darwin-arm64", "linux-musl", "debian-openssl-3.0.x", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  PET
}

model User {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  email     String   @unique @db.VarChar(50)
  telephone String   @db.VarChar(20)
  birthday  DateTime @db.Date
  password  String   @db.VarChar(255)
  cpf       String   @unique @db.Char(11)

  address Address[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)

  role Role @default(USER)
}

model Address {
  id String @id @default(uuid())

  cep           String  @db.Char(8)
  street        String  @db.VarChar(100)
  number        Int     @db.Integer
  neighbourhood String  @db.VarChar(100)
  city          String  @db.VarChar(100)
  uf            String  @db.Char(2)
  address2      String? @db.VarChar(100)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id])
}

model ProductType {
  id          String    @id @default(uuid())
  description String    @db.VarChar(50)
  Product     Product[]
}

model MeasureUnit {
  id          String    @id @default(uuid())
  description String    @db.VarChar(50)
  Product     Product[]
}

model Product {
  id          String @id @default(uuid())
  name        String @db.VarChar(100)
  description String @db.Text
  price       Float
  stock       Int
  image       String @db.VarChar(255)

  productType_id String
  productType    ProductType @relation(fields: [productType_id], references: [id])

  measureUnit_id String
  measureUnit    MeasureUnit @relation(fields: [measureUnit_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)

  @@index([name, price])
}
